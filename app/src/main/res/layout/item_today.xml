<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="280dp"
    android:elevation="3dp"
    android:layout_marginRight="10dp"
    android:layout_marginVertical="5dp"
    android:layout_marginTop="10dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/item_today_bg"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/image_bg"
        android:elevation="5dp"
        android:padding="8dp"
        android:src="@drawable/ic_round_school_24"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:paddingVertical="2dp"
            android:id="@+id/txtTitle"
            android:textSize="15sp"
            android:fontFamily="@font/signika_negative"
            android:textColor="#777777"
            android:textStyle="bold"
            android:text="Thị Giác Máy Tính(1)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingVertical="2dp"
            android:id="@+id/txtLoacation"
            android:gravity="center_vertical"
            android:fontFamily="@font/signika_negative"
            android:textStyle="bold"
            android:textColor="#a6a6a6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B204" />
        <TextView
            android:paddingVertical="2dp"
            android:id="@+id/txtTime"
            android:gravity="center_vertical"
            android:fontFamily="@font/signika_negative"
            android:textStyle="bold"
            android:textColor="#c4c4c4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7h30 -> 9h30 " />

    </LinearLayout>

</LinearLayout>
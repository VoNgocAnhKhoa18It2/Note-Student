<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vnakhoa.vku.studentnote">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/vku"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vku"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoAppBar">
        <activity
            android:name=".activity.CalendarTodayActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentNote" />
        <activity
            android:name=".activity.EditPassActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentNote" />
        <activity
            android:name=".activity.ProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentNote" />
        <activity
            android:name=".activity.EditInforActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentNote" />
        <activity
            android:name=".activity.CalendarWeekActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentNote" />
        <activity
            android:name=".activity.EditWorkDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentNote" />
        <activity
            android:name=".activity.MoreWorkActivity"
            android:exported="true"
            android:theme="@style/Theme.StudentNote" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.NoAppBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>